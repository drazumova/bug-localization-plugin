<idea-plugin>
    <id>com.github.drazumova.plugintest</id>
    <name>test</name>
    <vendor>drazumova</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java-capable</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>Git4Idea</depends>

    <extensionPoints>
        <extensionPoint
                name="vcsInformationProvider"
                interface="com.github.drazumova.plugintest.vcs.VCSAnnotationProvider"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <exceptionFilter implementation="com.github.drazumova.plugintest.exceptions.ExceptionFilter"/>
        <projectService serviceImplementation="com.github.drazumova.plugintest.exceptions.ProbabilitiesCacheService"/>
    </extensions>
    <actions>
        <action id="com.github.drazumova.plugintest.exceptions.UpdateHighlightingAction"
                class="com.github.drazumova.plugintest.exceptions.UpdateHighlightingAction"
                    text="Update Exception Highlighting">
            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
